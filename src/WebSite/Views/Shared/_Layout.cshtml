

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>NNUG - Norwegian .NET User Group</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Homepage for Norwegian .NET User Group">
        <meta name="author" content="Joar Øyen">     
        
        @Styles.Render("~/content/css")
        @Scripts.Render("~/scripts/modernizr")

    </head>
    <body>
        <header>
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    
                        <a class="brand" href="@Url.Action("Index", "Home")">
                            <img alt="NNUG logo" src="~/Content/images/NNUG-logo.png" />
                            <span class="brand-text">Norwegian .NET User Group</span>
                        </a>
                        <div class="nav-collapse collapse">
                            <ul class="nav pull-right">
                                <li>@Html.ActionLink("Forsiden", "Index", "Home")</li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Om NNUG <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Om NNUG", "About", "Home")</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Ofte stilte spørsmål", "Faq", "Home")</li>
                                        <li>@Html.ActionLink("Tips til foredragsholdere", "Speaker", "Home")</li>
                                        <li>@Html.ActionLink("Starte ny avdeling", "StartChapter", "Home")</li>
                                    </ul>
                                </li>
                                <li>@Twitter.FollowerButton("nnug", true)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        
        <div class="container">
            @RenderBody()
        </div>

        <footer>
            <div class="container">
                Copyright &copy; @DateTime.Now.Year Norwegian .NET User Group
            </div>
        </footer>

        @Scripts.Render("~/scripts/jquery")
        @Scripts.Render("~/scripts/bootstrap")

        @RenderSection("scripts", required: false)
    </body>
</html>
