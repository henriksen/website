<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>NNUG - Norwegian .NET User Group</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Homepage for Norwegian .NET User Group">
        <meta name="author" content="Joar Øyen">     
        
        @Styles.Render("~/content/css")
        @Scripts.Render("~/scripts/modernizr")

    </head>
    <body>
        @*<header>*@
            <div class="navbar navbar-fixed-top navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    
                        <a class="brand" href="@Url.Action("Index", "Home")">
                            <img alt="NNUG logo" src="~/Content/images/NNUG-logo.png" />
                            <span class="brand-text">Norwegian .NET User Group</span>
                        </a>
                        <div class="nav-collapse collapse">
                            <ul class="nav pull-right">
                                <li><a href="@Url.Action("Index", "Home")">Forsiden</a></li>
                                <li><a href="https://twitter.com/nnug"><i class="icon-twitter"></i>&nbsp;Twitter</a></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Om NNUG <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Om NNUG</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Ofte stilte spørsmål</a></li>
                                        <li><a href="#">Tips til foredragsholdere</a></li>
                                        <li><a href="#">Starte ny avdeling</a></li>
                                    </ul>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        @*</header>*@

        @RenderBody()
        
        <footer>
            <div class="container">
                Copyright &copy; @DateTime.Now.Year Norwegian .NET User Group
            </div>
        </footer>

        @Scripts.Render("~/scripts/jquery")
        @Scripts.Render("~/scripts/bootstrap")

        @RenderSection("scripts", required: false)
    </body>
</html>
